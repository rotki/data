{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "airdrops": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^\\w+$": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "csv_path": {
                            "type": "string",
                            "pattern": ".*.csv$"
                        },
                        "csv_hash": {
                            "type": "string",
                            "pattern": "^[a-fA-F0-9]{64}$"
                        },
                        "api_url": {"type": "string", "format": "uri"},
                        "amount_path": {"type": "string"},
                        "asset_identifier": {
                            "type": "string"
                        },
                        "url": {
                            "type": "string",
                            "format": "uri"
                        },
                        "name": {"type": "string"},
                        "icon": {"type": "string"},
                        "icon_path": {"type": "string"},
                        "cutoff_time": {"type": "integer"},
                        "new_asset_data": {
                            "oneOf": [
                                {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "asset_type": {
                                            "const": "EVM_TOKEN"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "address": {
                                            "type": "string",
                                            "pattern": "\\b0x[a-fA-F0-9]{40}\\b"
                                        },
                                        "symbol": {
                                            "type": "string"
                                        },
                                        "chain_id": {
                                            "type": "integer"
                                        },
                                        "decimals": {
                                            "type": "integer"
                                        },
                                        "coingecko": {
                                            "type": "string"
                                        },
                                        "cryptocompare": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "asset_type",
                                        "address",
                                        "name",
                                        "symbol",
                                        "chain_id",
                                        "decimals"
                                    ]
                                },
                                {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "asset_type": {
                                            "enum": [
                                                "FIAT",
                                                "OWN_CHAIN",
                                                "OMNI_TOKEN",
                                                "NEO_TOKEN",
                                                "COUNTERPARTY_TOKEN",
                                                "BITSHARES_TOKEN",
                                                "ARDOR_TOKEN",
                                                "NXT_TOKEN",
                                                "UBIQ_TOKEN",
                                                "NUBITS_TOKEN",
                                                "BURST_TOKEN",
                                                "WAVES_TOKEN",
                                                "QTUM_TOKEN",
                                                "STELLAR_TOKEN",
                                                "TRON_TOKEN",
                                                "ONTOLOGY_TOKEN",
                                                "VECHAIN_TOKEN",
                                                "BINANCE_TOKEN",
                                                "EOS_TOKEN",
                                                "FUSION_TOKEN",
                                                "LUNIVERSE_TOKEN",
                                                "OTHER",
                                                "AVALANCHE_TOKEN",
                                                "SOLANA_TOKEN",
                                                "NFT",
                                                "CUSTOM_ASSET"
                                            ]
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "symbol": {
                                            "type": "string"
                                        },
                                        "coingecko": {
                                            "type": "string"
                                        },
                                        "cryptocompare": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "asset_type",
                                        "name",
                                        "symbol"
                                    ]
                                }
                            ]
                        }
                    },
                    "required": [
                        "asset_identifier",
                        "icon",
                        "name",
                        "url"
                    ]
                }
            }
        },
        "poap_airdrops": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^\\w+$": {
                    "type": "array",
                    "items": [
                        {
                            "type": "string",
                            "pattern": ".*.json$"
                        },
                        {
                            "type": "string",
                            "format": "uri"
                        },
                        {
                            "type": "string"
                        },
                        {
                            "type": "string",
                            "pattern": "^[a-fA-F0-9]{64}$"
                        }
                    ],
                    "minItems": 4
                }
            }
        }
    },
    "required": [
        "airdrops",
        "poap_airdrops"
    ]
}